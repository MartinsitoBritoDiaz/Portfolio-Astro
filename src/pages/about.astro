---
import MainLayout from "../layouts/MainLayout.astro";
import { info } from "@data";
import { ContactForm } from '../components/react';
import Courses from "@components/general/Courses.astro";
import Experience from "@components/general/Experience.astro";
import Education from "@components/general/Education.astro";
import WhoAmI from "@components/general/WhoAmI.astro";
---

<MainLayout>
  <article class="about-page">
    <!-- Page Header -->
    <header class="page-header mb-12 sm:mb-16">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-dark dark:text-light mb-4">
        About Me
      </h1>
      <p class="text-lg sm:text-xl text-dark/80 dark:text-light/80 max-w-3xl leading-relaxed">
        {info["short-description"]}
      </p>
    </header>

    <!-- Main Content Sections -->
    <div class="space-y-20 sm:space-y-24">
      <WhoAmI />
      
      <Experience />
      
      <Education />

      <Courses />

      <ContactForm client:load />
    </div>
  </article>
</MainLayout>

<style>
  .about-page {
    scroll-behavior: smooth;
  }
  
  /* Smooth scroll offset for anchor links */
  .about-page section[id] {
    scroll-margin-top: 2rem;
  }
  
  @media (prefers-reduced-motion: reduce) {
    .about-page {
      scroll-behavior: auto;
    }
  }
</style>