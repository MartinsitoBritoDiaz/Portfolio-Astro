---
import { IProject } from "@types";

interface Props {
  project: IProject;
}

const { project } = Astro.props;
---

<div 
  class="client-project-card group relative bg-white dark:bg-[#252525] rounded-lg p-4 sm:p-6 border border-dark-green/10 dark:border-light-green/20 hover:border-dark-green/30 dark:hover:border-light-green/40 hover:shadow-md transition-all duration-300"
>
  <!-- Project Image -->
  <a
    href={project.isDeploy ? project.liveSite : project.code}
    target={project.isDeploy ? "_blank" : undefined}
    rel="noopener noreferrer"
    class="block mb-4 rounded-lg overflow-hidden bg-dark-green/5 dark:bg-light-green/5"
    aria-label={`View ${project.name} project`}
  >
    <img
      src={project.image || "/assets/images/logo.png"}
      alt={`${project.name} project screenshot`}
      class="w-full h-40 object-cover group-hover:scale-105 transition-transform duration-300"
      loading="lazy"
      onerror="this.src='/assets/images/logo.png'"
    />
  </a>

  <!-- Project Info -->
  <div class="space-y-3">
    <h4 class="text-lg font-bold text-dark dark:text-light group-hover:text-dark-green dark:group-hover:text-light-green transition-colors duration-200">
      <a
        href={project.isDeploy ? project.liveSite : project.code}
        target={project.isDeploy ? "_blank" : undefined}
        rel="noopener noreferrer"
        class="hover:underline focus:outline-none focus:ring-2 focus:ring-dark-green dark:focus:ring-light-green focus:ring-offset-2 rounded"
      >
        {project.name}
      </a>
    </h4>

    <p class="text-sm text-dark/80 dark:text-light/80 line-clamp-2">
      {project.description}
    </p>

    <!-- Role & Impact -->
    {(project.role || project.impact) && (
      <div class="space-y-2 pt-2 border-t border-dark-green/10 dark:border-light-green/20">
        {project.role && (
          <div class="flex items-start gap-2">
            <svg class="w-4 h-4 text-dark-green dark:text-light-green mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <div>
              <p class="text-xs font-semibold text-dark-green dark:text-light-green uppercase tracking-wide">Role</p>
              <p class="text-sm text-dark/80 dark:text-light/80">{project.role}</p>
            </div>
          </div>
        )}
        {project.impact && (
          <div class="flex items-start gap-2">
            <svg class="w-4 h-4 text-dark-green dark:text-light-green mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
            <div>
              <p class="text-xs font-semibold text-dark-green dark:text-light-green uppercase tracking-wide">Impact</p>
              <p class="text-sm text-dark/80 dark:text-light/80">{project.impact}</p>
            </div>
          </div>
        )}
      </div>
    )}

    <!-- Technologies -->
    <div class="flex flex-wrap gap-2 pt-2">
      {project.technologies.slice(0, 4).map((tech: string, index: number) => (
        <span
          key={index}
          class="inline-flex items-center px-2 py-1 text-xs font-medium rounded bg-dark-green/10 dark:bg-light-green/20 text-dark-green dark:text-light-green border border-dark-green/20 dark:border-light-green/30"
        >
          {tech}
        </span>
      ))}
      {project.technologies.length > 4 && (
        <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-dark/60 dark:text-light/60">
          +{project.technologies.length - 4} more
        </span>
      )}
    </div>

    <!-- Action Links -->
    <div class="flex items-center gap-3 pt-2">
      {project.isDeploy && project.liveSite && (
        <a
          href={project.liveSite}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-1 text-xs font-medium text-dark-green dark:text-light-green hover:underline focus:outline-none focus:ring-2 focus:ring-dark-green dark:focus:ring-light-green focus:ring-offset-2 rounded"
          aria-label={`Visit ${project.name} live site`}
        >
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          Live Demo
        </a>
      )}
    </div>
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

