---
import { info } from "@data";
import { createLogo } from "@utils";

const textLinks: { label: string; href: string }[] = [
	{ label: 'Home', href: '/' },
	{ label: 'Projects', href: '/projects' },
	{ label: 'Clients', href: '/clients' },
	{ label: 'About', href: '/about' },
];
---

<!-- Mobile: Vertical layout (logo top, menu below) | Desktop: Horizontal layout -->
<nav
  class="container-sm flex flex-col md:flex-row md:items-center md:justify-between gap-3 sm:gap-4 md:gap-0 md:h-auto md:py-4 md:relative mt-3 sm:mt-5 md:mb-5 mb-6 sm:mb-10 w-full max-w-full"
  style="overflow: visible !important; overflow-x: visible !important;"
>
  <!-- Logo - Top on mobile, left on desktop -->
  <div class="flex justify-center md:justify-start w-full md:w-auto items-center md:flex-shrink-0">
    <img 
      width="100" 
      height="100" 
      src={info.logo} 
      class="object-contain h-14 w-20 sm:h-16 sm:w-24 md:h-20 md:w-24 lg:h-24 lg:w-28 flex-shrink-0 rounded-full" 
      alt={info.name} 
      style="display: block;" 
    />
  </div>
  
  <!-- Menu Items - Below logo on mobile, center on desktop -->
  <ul class="nav-items dark:bg-[#202020] dark:text-light text-xs sm:text-sm md:text-base w-full md:w-auto md:absolute md:left-1/2 md:-translate-x-1/2" style="overflow: visible !important;">
    {
      textLinks.map(({ label, href }) => (
        <li class="flex-shrink-0">
          <a
            aria-current={Astro.url.pathname === href}
            class:list={[
              'text-xs sm:text-sm md:text-base font-semibold link',
              {
                active:
                  Astro.url.pathname === href ||
                  (href !== '/' && Astro.url.pathname.startsWith(href)),
              },
            ]}
            href={href}
          >
            {label}
          </a>
        </li>
      ))
    }
  </ul>
  
  <!-- Dark Mode Button - In navbar on desktop, fixed bottom right on mobile -->
  <div class="hidden md:flex items-center flex-shrink-0">
    <button 
      aria-label="Toggle dark mode"
      id="theme-button-desktop"
      class="dark:text-light rounded-lg p-2.5 bg-[#3d403a] dark:bg-[#202020] shadow-lg hover:shadow-xl transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-dark-green dark:focus:ring-light-green focus:ring-offset-2"
    ></button>
  </div>
</nav>

<!-- Dark Mode Button - Fixed bottom right on mobile only -->
<div class="fixed z-50 bottom-3 right-3 sm:bottom-4 sm:right-4 md:hidden">
  <button 
    aria-label="Toggle dark mode"
    id="theme-button-mobile"
    class="dark:text-light rounded-lg p-2.5 sm:p-3 bg-[#3d403a] dark:bg-[#202020] shadow-lg hover:shadow-xl transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-dark-green dark:focus:ring-light-green focus:ring-offset-2"
  ></button>
</div>


<script is:inline>
  const moon = `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-moon"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>`;
  const sun = `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-sun"><circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg>`;
  const themeButtonDesktop = document.getElementById("theme-button-desktop");
  const themeButtonMobile = document.getElementById("theme-button-mobile");
  const browserTheme = document.querySelector('[name="theme-color"]');
  const theme = (() => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    // Default to light mode (white)
    return "light";
  })();
  let isDark;
  
  const updateThemeButtons = () => {
    if (isDark) {
      if (themeButtonDesktop) {
        themeButtonDesktop.innerHTML = moon;
      }
      if (themeButtonMobile) {
        themeButtonMobile.innerHTML = moon;
      }
      if (browserTheme) {
        browserTheme.content = "#FFFFFF";
      }
    } else {
      if (themeButtonDesktop) {
        themeButtonDesktop.innerHTML = sun;
      }
      if (themeButtonMobile) {
        themeButtonMobile.innerHTML = sun;
      }
      if (browserTheme) {
        browserTheme.content = "#111111";
      }
    }
  };
  
  if (theme === "light") {
    document.documentElement.setAttribute("data-theme", "light");
    isDark = true;
    updateThemeButtons();
  } else {
    document.documentElement.setAttribute("data-theme", "dark");
    isDark = false;
    updateThemeButtons();
  }
  window.localStorage.setItem("theme", theme);

  const darkModeHandler = () => {
    if (isDark) {
      document.documentElement.setAttribute("data-theme", "dark");
      localStorage.theme = "dark";
      isDark = false;
      updateThemeButtons();
    } else {
      document.documentElement.setAttribute("data-theme", "light");
      localStorage.theme = "light";
      isDark = true;
      updateThemeButtons();
    }
  };

  if (themeButtonDesktop) {
    themeButtonDesktop.addEventListener("click", darkModeHandler);
  }
  if (themeButtonMobile) {
    themeButtonMobile.addEventListener("click", darkModeHandler);
  }
</script>
