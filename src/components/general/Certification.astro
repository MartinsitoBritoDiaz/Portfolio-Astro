---
import { ICertification } from '@types';

const { title, logo, description, earnedOn, expiresOn, verificationUrl } = Astro.props as ICertification;
---

<article 
  class="group relative h-full bg-white dark:bg-[#1a1a1a] rounded-xl p-6 sm:p-8 shadow-md hover:shadow-xl transition-all duration-300 border border-dark-green/10 dark:border-light-green/20 hover:border-dark-green/30 dark:hover:border-light-green/40 hover:-translate-y-1"
  role="article"
  aria-labelledby={`certification-${title.toLowerCase().replace(/\s+/g, '-')}`}
>
  <!-- Decorative gradient overlay on hover -->
  <div class="absolute inset-0 bg-gradient-to-br from-dark-green/5 via-transparent to-light-green/5 dark:from-light-green/5 dark:to-dark-green/5 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>

  <div class="relative z-10 flex flex-col items-center text-center h-full">
    <!-- Logo Container -->
    <div class="mb-6 relative">
      <div class="absolute inset-0 bg-gradient-to-br from-dark-green/20 to-light-green/20 dark:from-light-green/20 dark:to-dark-green/20 rounded-2xl blur-xl group-hover:blur-2xl transition-all duration-300"></div>
      <div class="relative bg-white dark:bg-[#252525] p-4 rounded-2xl shadow-lg group-hover:scale-105 transition-transform duration-300">
        <img
          class="w-20 h-20 sm:w-24 sm:h-24 object-contain"
          src={logo}
          alt={`${title} certification badge`}
          loading="lazy"
        />
      </div>
    </div>

    <!-- Content -->
    <div class="flex-1 flex flex-col items-center space-y-3 mb-6">
      <h3 
        id={`certification-${title.toLowerCase().replace(/\s+/g, '-')}`}
        class="text-xl sm:text-2xl font-bold text-dark dark:text-light group-hover:text-dark-green dark:group-hover:text-light-green transition-colors duration-300"
      >
        {title}
      </h3>
      
      <p class="text-sm sm:text-base text-dark-green dark:text-light-green font-semibold">
        {description}
      </p>

      <!-- Date Information -->
      <div class="flex flex-col items-center gap-2 text-sm text-light-green dark:text-light-green/80">
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <time datetime={earnedOn}>
            Issued {earnedOn}
          </time>
        </div>
        {expiresOn && expiresOn.length > 0 && (
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <time datetime={expiresOn}>
              Expires {expiresOn}
            </time>
          </div>
        )}
      </div>
    </div>

    <!-- CTA Button -->
    <a
      href={verificationUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="group/btn w-full inline-flex items-center justify-center gap-2 bg-dark-green dark:bg-light-green text-white font-semibold py-3 px-6 rounded-lg hover:bg-dark-green/90 dark:hover:bg-light-green/90 transition-all duration-300 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-dark-green dark:focus:ring-light-green"
      aria-label={`Verify ${title} certification`}
    >
      <span>Verify Badge</span>
      <svg class="w-4 h-4 transition-transform duration-300 group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
      </svg>
    </a>
  </div>
</article>