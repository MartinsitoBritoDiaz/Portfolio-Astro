---
import { info } from '@data';
import { ICourse } from '@types';
---

<section class="courses-section my-16 sm:my-12" aria-labelledby="courses-heading">
  <h2 
    id="courses-heading"
    class="text-3xl sm:text-4xl font-bold text-dark dark:text-light mb-10 relative inline-block"
  >
    <span class="relative z-10">Certifications & Courses</span>
    <span class="absolute bottom-0 left-0 w-16 h-1 bg-dark-green dark:bg-light-green rounded-full"></span>
  </h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
    {info.courses.map((course: ICourse, index) => (
      <article 
        class="group relative bg-white dark:bg-[#1a1a1a] rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 border border-dark-green/10 dark:border-light-green/20 hover:border-dark-green/30 dark:hover:border-light-green/40 hover:-translate-y-1"
        role="article"
        aria-label={`${course.course} from ${course.institute}`}
      >
        <!-- Card Header with Icon -->
        <div class="flex items-start gap-4 mb-4">
          <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-dark-green/10 dark:bg-light-green/20 flex items-center justify-center group-hover:bg-dark-green/20 dark:group-hover:bg-light-green/30 transition-colors duration-300">
            <svg 
              class="w-6 h-6 text-dark-green dark:text-light-green" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <h3 class="text-lg sm:text-xl font-bold text-dark dark:text-light mb-2 line-clamp-2 group-hover:text-dark-green dark:group-hover:text-light-green transition-colors duration-300">
              {course.course}
            </h3>
          </div>
        </div>

        <!-- Card Body -->
        <div class="space-y-3">
          <div class="flex items-center gap-2 text-sm sm:text-base text-dark-green dark:text-light-green font-semibold">
            <svg 
              class="w-4 h-4 flex-shrink-0" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <span class="truncate">{course.institute}</span>
          </div>
          
          <div class="flex items-center gap-2 text-sm text-light-green dark:text-light-green/80">
            <svg 
              class="w-4 h-4 flex-shrink-0" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={course.accomplishDate}>
              Completed {course.accomplishDate}
            </time>
          </div>
        </div>

        <!-- Hover effect indicator -->
        <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-dark-green to-light-green rounded-b-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </article>
    ))}
  </div>
</section>