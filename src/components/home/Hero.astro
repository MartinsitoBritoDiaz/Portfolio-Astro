---
import { info } from "@data";
import { IHeroProps } from "@types";

const { name, degree, about, availableForOpportunities = false } = Astro.props as IHeroProps;
---

<section class="hero-section min-h-[85vh] sm:min-h-[90vh] flex items-center py-12 sm:py-16 lg:py-20 w-full max-w-full" aria-labelledby="hero-heading" style="overflow-x: visible !important; overflow-y: visible !important;">
  <div class="w-full max-w-full" style="overflow-x: visible !important; overflow-y: visible !important;">
    <div class="grid lg:grid-cols-2 gap-8 sm:gap-10 lg:gap-16 items-center w-full max-w-full">
      <!-- Content Section -->
      <div class="order-2 lg:order-1 space-y-6 sm:space-y-8">
        <!-- Greeting -->
        <div class="inline-flex items-center gap-2 text-base sm:text-lg text-dark-green dark:text-light-green font-semibold mb-2">
          <span class="animate-wave inline-block" role="img" aria-label="Waving hand">ðŸ‘‹</span>
          <span>Hi there, I'm</span>
        </div>

        <!-- Name & Title -->
        <div class="space-y-3 sm:space-y-4 w-full max-w-full">
          <h1 
            id="hero-heading"
            class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold leading-tight break-words"
          >
            <span class="block text-dark dark:text-light">
              I'm <span class="text-dark-green dark:text-light-green relative inline-block break-words">
                {name}
                <span class="absolute -bottom-2 left-0 right-0 h-1 bg-gradient-to-r from-dark-green via-light-green to-transparent dark:from-light-green dark:via-dark-green rounded-full opacity-60"></span>
              </span>
            </span>
          </h1>
          
          <div class="flex flex-wrap items-center gap-3 sm:gap-4 w-full">
            <h2 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-bold text-dark-green dark:text-light-green break-words">
              {degree}
            </h2>
            {availableForOpportunities && (
              <div class="hidden sm:flex items-center gap-2 px-3 py-1 bg-dark-green/10 dark:bg-light-green/20 rounded-full">
                <span class="relative flex h-3 w-3">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-dark-green dark:bg-light-green opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-3 w-3 bg-dark-green dark:bg-light-green"></span>
                </span>
                <span class="text-sm font-medium text-dark-green dark:text-light-green">Available for opportunities</span>
              </div>
            )}
          </div>
        </div>

        <!-- Description -->
        <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-dark/90 dark:text-light/90 leading-relaxed max-w-2xl font-normal break-words overflow-wrap-anywhere">
          {about}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap items-center gap-4 sm:gap-6 pt-4">
          <a 
            href="/projects" 
            class="group inline-flex items-center gap-2 px-6 sm:px-8 py-3 sm:py-4 bg-dark-green dark:bg-light-green text-white font-semibold rounded-lg hover:bg-dark-green/90 dark:hover:bg-light-green/90 transition-all duration-300 hover:shadow-lg hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-dark-green dark:focus:ring-light-green"
            aria-label="View my projects"
          >
            <span>View My Work</span>
            <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          
          <a 
            href="/about" 
            class="group inline-flex items-center gap-2 px-6 sm:px-8 py-3 sm:py-4 border-2 border-dark-green dark:border-light-green text-dark-green dark:text-light-green font-semibold rounded-lg hover:bg-dark-green/10 dark:hover:bg-light-green/10 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-dark-green dark:focus:ring-light-green"
            aria-label="Learn more about me"
          >
            <span>About Me</span>
            <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>

        <!-- Contact Info -->
        <div class="flex flex-col sm:flex-row sm:items-center gap-4 sm:gap-6 pt-2">
          <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-3 text-sm sm:text-base lg:text-lg">
            <span class="font-semibold text-dark dark:text-light whitespace-nowrap">Let's connect:</span>
            <a 
              href="mailto:martinsitobd@gmail.com" 
              class="text-dark-green dark:text-light-green font-medium hover:underline focus:outline-none focus:ring-2 focus:ring-dark-green dark:focus:ring-light-green focus:ring-offset-2 rounded break-all sm:break-normal"
              aria-label="Send email to martinsitobd@gmail.com"
            >
              martinsitobd@gmail.com
            </a>
          </div>
          
          <!-- Social Links -->
          <div class="flex items-center gap-4">
            <a 
              href={info.contact.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="text-dark-green dark:text-light-green hover:text-dark-green/80 dark:hover:text-light-green/80 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-dark-green dark:focus:ring-light-green focus:ring-offset-2 rounded"
              aria-label="Visit LinkedIn profile"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
            <a 
              href={info.contact.github}
              target="_blank"
              rel="noopener noreferrer"
              class="text-dark-green dark:text-light-green hover:text-dark-green/80 dark:hover:text-light-green/80 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-dark-green dark:focus:ring-light-green focus:ring-offset-2 rounded"
              aria-label="Visit GitHub profile"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Visual Section -->
      <div class="order-1 lg:order-2 flex items-center justify-center lg:justify-end w-full px-3 sm:px-4 md:px-6" style="overflow: visible !important; overflow-x: visible !important; overflow-y: visible !important; position: relative;">
        <div class="relative w-full max-w-[180px] sm:max-w-[240px] md:max-w-[320px] lg:max-w-md xl:max-w-lg mx-auto" style="overflow: visible !important; overflow-x: visible !important; overflow-y: visible !important;">
          <!-- Decorative background elements -->
          <div class="absolute inset-0 bg-gradient-to-br from-dark-green/20 via-light-green/10 to-transparent dark:from-light-green/20 dark:via-dark-green/10 rounded-3xl blur-3xl transform rotate-6" style="overflow: visible !important;"></div>
          
          <!-- Main image container -->
          <div class="relative z-10 w-full" style="overflow: visible !important; overflow-x: visible !important; overflow-y: visible !important; padding: 0.25rem;">
            <img 
              width="600" 
              height="600" 
              src={info.codeBackground} 
              class="w-full h-auto object-contain drop-shadow-2xl animate-float" 
              alt="Code background illustration representing software development" 
              loading="eager"
              fetchpriority="high"
              style="display: block; width: 100%; height: auto; max-width: 100%; object-fit: contain; transform-origin: center center;"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes wave {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(20deg); }
    75% { transform: rotate(-20deg); }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }

  .animate-wave {
    animation: wave 1s ease-in-out infinite;
    transform-origin: 70% 70%;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-wave,
    .animate-float {
      animation: none;
    }
  }
</style>
