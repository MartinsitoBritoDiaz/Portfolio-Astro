---
import Certification from "@components/general/Certification.astro";
import { ICertification, ICertificationsProps } from "@types";

const { certifications } = Astro.props as ICertificationsProps;
---

<section class="certifications-section py-12 sm:py-16 md:py-20 lg:py-24 overflow-x-hidden w-full max-w-full" aria-labelledby="certifications-heading">
  <div class="w-full max-w-full overflow-x-hidden">
    <!-- Section Header -->
    <div class="text-center mb-8 sm:mb-12 md:mb-16">
      <h2 
        id="certifications-heading"
        class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-dark dark:text-light mb-3 sm:mb-4 relative inline-block"
      >
        <span class="relative z-10">Professional Certifications</span>
        <span class="absolute -bottom-1.5 sm:-bottom-2 left-0 right-0 h-0.5 sm:h-1 bg-gradient-to-r from-transparent via-dark-green to-transparent dark:via-light-green rounded-full"></span>
      </h2>
      <p class="text-sm sm:text-base md:text-lg lg:text-xl text-dark/80 dark:text-light/80 max-w-2xl mx-auto mt-3 sm:mt-4 px-4 sm:px-0">
        Validated expertise in modern technologies and cloud platforms
      </p>
    </div>

    <!-- Certifications Grid - Single column on mobile, 2 columns on tablet, 3 on desktop -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 sm:gap-6 md:gap-8 lg:gap-10">
      {
        certifications.map((certification: ICertification, index) => (
          <div 
            class="certification-item"
            style={`animation-delay: ${index * 100}ms`}
          >
            <Certification {...certification} />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .certification-item {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .certification-item {
      animation: none;
      opacity: 1;
    }
  }
</style>
